@model IssueManagementSystem.Models.Issue

<h2>Issue Details</h2>

<div class="card p-3">
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Priority:</strong> @Model.Priority</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Assignee:</strong> @Model.Assignee</p>
    <p><strong>Created:</strong> @Model.CreatedDate</p>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>